# bash aliases

# color things
alias ls='ls --color=auto'
alias colorslist="set | egrep 'COLOR_\w*'"  # lists all the colors
alias pacman='pacman-color'

# basic shell commands
alias ..='cd ..'
alias ...='cd .. ; cd ..'
alias sl='ls'

alias ll='ls -hl'
alias la='ls -a'
alias lla='ls -lah'
alias lt='ls -tlh'
alias lta='ls -tlha'

alias sudo='sudo '

alias df='df -h' # Show disk usage
alias du='du -hcs *'

alias open='gnome-open'

# shortcuts
alias reloadbash='source ~/.bashrc'
alias systail='tail -f /var/log/system.log'
alias untar="tar xvzf"

# ssh servers
alias dhost="ssh naveg@jubilee.dreamhost.com"
alias paprika="ssh -X naveg@paprika.evangoldenberg.com"
alias cilantro="ssh -X -p 223 naveg@cilantro.evangoldenberg.com"
alias dtunnel="ssh -v -N -D 8080 jubilee.dreamhost.com"

